<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Recify</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="css/nav.css">
</head>

<body>
    <nav>
        <div class="navbar">
            <img src="img/logo2.png" onclick="location.href='/'" height="10%" width="10%">
            <a>Recify</a>
            <input type="checkbox" id="check_box" />
            <label for="check_box">
                <span></span>
                <span></span>
                <span></span>
            </label>
            <div id="side_menu">
                <ul>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/getReviews">Recent Reviews</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="timelineContainer">
        <ul class="result">
            <!-- Loop through quotes -->
            <% for(var i = 0; i < result.length; i++) {%>
              <li class="result">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title">Recipe ID: <%= result[i].recipeID %></h5>
                      <h6 class="card-subtitle mb-2 text-muted">User ID: <%= result[i].userID %></h6>
                      <h7 class="card-link">Rating: <%= result[i].rating %></p>
                      <p class="card-text">Comment: <%= result[i].comment %></p>
                      <p class="card-link">Time: <%= result[i].time %></p>
                    </div>
                  </div>

              </li>
            <% } %>
          </ul>

    </div>
    <footer>

        
        <div id="footer_containter">
            <h5>
                Copyright Â© Your Website 2022
            </h5>
        </div>

        <form id="footerForm" action="logout" method="POST" class="logoutForm" onsubmit="DoLogoutForm__submit(this); return false;">
            <input type="submit" class="btn" value="Log Out"/>
            <button type="button" class="btn" onclick="location.href='/getReviews'">Reviews</button>
          </form>
    </footer>

    <!-- <script src="app.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>