    <style>
        .bg-primary {
            /*Navbar*/
            background-color: #22577A !important;
            border-bottom: 5px solid #38A3A5 !important;
        }

        .navbar-brand {
            padding-top: 0.3125rem;
            padding-bottom: 0.3125rem;
            margin-right: 1rem;
            font-size: 1.25rem;
            text-decoration: none;
            white-space: nowrap;
            color: #C7F9CC !important;
        }

        body {
            background-color: #C7F9CC;
            color: #22577A;
            height: 100%;
        }

        main {
            text-align: center;
            align-items: center;
            color: #22577A;

        }

        #food_image {
            width: 100%;
            margin-top: 5%;
        }

        #food_pic {
            width: 90%;
        }

        #title {
            font-size: xx-large;
            margin-top: 5%;
            margin-bottom: 5%;
            font-weight: bolder;
        }

        .btnReview {
            background-color: #80ED99;
            color: #22577A;
            border: 2px solid #22577A !important;
            border-radius: 1em;
            width: 50%
        }

        .btnReview:hover {
            background-color: #22577A;
            color: #C7F9CC;
        }

        h3 {
            margin-top: 20%;
            margin-bottom: 20%;
            font-weight: bolder;
        }

        #summary {
            margin-bottom: 15%;
            margin-left: 2%;
            margin-right: 2%;
            border: 2px solid #22577A;
            background-color: #57CC99;
            padding: 2%;
            padding-top: 5%;
            padding-bottom: 5%;
            font-weight: bold;
            border-radius: 6%;
        }

        .footer {
            position: relative;
            bottom: 0px;
        }

        #footer_image {

            height: 100%;
            width: 10%;
        }
    </style>

    <link rel="stylesheet" type="text/css" href="/css/nav.css">
